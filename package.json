{
  "name": "sswebapp",
  "version": "1.0.0",
  "description": "ssWeb application built using web technologies",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder build --win",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --prune=true --out=release-builds",
    "package-win": "electron-packager . ssapp --overwrite --asar --platform=win32 --arch=x64 --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Sub Stockist\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^5.0.6",
    "electron-builder": "^21.0.15",
    "electron-packager": "^14.0.6",
    "electron-rebuild": "^1.8.6",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.2"
  },
  "dependencies": {
    "async": "^3.1.0",
    "axios": "^0.19.0",
    "bootstrap-datepicker": "^1.9.0",
    "bootstrap-multiselect": "^0.9.15",
    "electron-updater": "^4.2.0",
    "getmac": "^1.4.6",
    "jquery": "^3.4.1",
    "jspdf": "^1.5.3",
    "jspdf-autotable": "^2.3.5",
    "load-google-maps-api": "^2.0.1",
    "macaddress": "^0.2.9",
    "md5": "^2.2.1",
    "moment": "^2.24.0",
    "node-schedule": "^1.3.2",
    "pdf-to-printer": "^1.1.2",
    "sha1": "^1.1.1",
    "sqlite3": "^4.0.9",
    "squel": "^5.13.0",
    "systeminformation": "^4.14.8"
  },
  "build": {
    "appId": "github.com/MapleGraph/ssweb-release",
    "files": [
      "**/*",
      "dist/**/*"
    ],
    "publish": {
      "provider": "github",
      "repo": "ssweb-release",
      "host": "https://github.com/MapleGraph/ssweb-release",
      "token": "d141cfc8e5ed35d790307e2b2dfc9d586af75135",
      "owner": "MapleGraph",
      "protocol": "https"
    },
    "win": {
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SSWeb AutoUpdate",
      "artifactName": "sswebapp-Setup-${version}.${ext}",
      "oneClick": false,
      "perMachine": false,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "logo.ico"
    }
  }
}
